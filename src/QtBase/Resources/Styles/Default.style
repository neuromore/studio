	border: 								1px solid rgb(0,159,227);
}


QToolButton#SpinBoxLeft
{
	background-color: 						rgb(74,74,73);
	color: 									rgb(157,157,156);

	border-top: 							1px solid rgb(50,50,50);
	border-left: 							1px solid rgb(50,50,50);
