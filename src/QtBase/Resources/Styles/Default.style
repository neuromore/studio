/*---------------------------------------------------------------------------------------------------------------------*/
QProgressBar
{
	text-align: 							center;
	color: 									rgb(255,255,255);
	max-height: 							16px;
	min-height: 							16px;
	border-radius: 							4px;
}

QProgressBar::chunk
{
	background: 							qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 rgb(0,159,227), stop: 1 rgb(131,208,245));	
	border-radius: 							4px;
}


