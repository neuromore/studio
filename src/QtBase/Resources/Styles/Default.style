	background:								transparent;
}

QMenuBar::item:selected
{
	background-color: 						rgb(0,159,227);
	color: 									rgb(60,60,59);
}

QMenuBar::item:disabled
{
	background-color:						rgb(50,50,49);
	color: 									rgb(74,74,73);
}


