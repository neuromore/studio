/*
	Widgets

General state:
------------------------------------------------------
	border: 								1px solid rgb(50,50,50);
	border-radius: 							7px;

	background-color: 						rgb(74,74,73);
	color: 									rgb(0,159,227);

	selection-color: 						rgb(60,60,59);
	selection-background-color: 			rgb(0,159,227);

	min-height:								22px;

Disabled state:
------------------------------------------------------
	background-color:						rgb(50,50,49);
	color: 									rgb(74,74,73);

Focus state:
------------------------------------------------------
	border:									1px solid rgb(0,159,227);

Hover state:
------------------------------------------------------
	background-color:						rgb(0,159,227);
	color:			 						rgb(44,44,43);

Pressed state:
------------------------------------------------------
	background-color:						rgb(0,136,194);
*/



/*---------------------------------------------------------------------------------------------------------------------*/
/* Default														                                                       */
/*---------------------------------------------------------------------------------------------------------------------*/

*
{
	background-color: 						rgb(60,60,59);
	color: 									rgb(218,218,218);		
}

QWidget#TransparentWidget
{
	background-color: 						transparent;
}

QWidget#BackgroundWidget
{
	background-color: 						rgb(60,60,59);
}

QWidget#DockWidget
{
	background-color: 						rgb(60,60,59);
	border: 								1px solid rgb(112,111,111);
	border-top: 							none;
}


/*--------------------------------------------------------------------------*/
/* MainWindow																*/
/*--------------------------------------------------------------------------*/
QMainWindow
{
	background-color: 						rgb(60,60,59);
}


/*---------------------------------------------------------------------------------------------------------------------*/
/* Push Button													                                                       */
/*---------------------------------------------------------------------------------------------------------------------*/
QPushButton
{
	border: 								1px solid rgb(50,50,50);

	background-color: 						rgb(74,74,73);
	color: 									rgb(0,159,227);

	selection-color: 						rgb(60,60,59);
	selection-background-color: 			rgb(0,159,227);

	border-radius: 							7px;

	min-height:								20px;
}

QPushButton:pressed
{
	color: 									rgb(20,20,20);
}

QPushButton:checked
{
	border: 								1px solid rgb(0,159,227);
	color: 									rgb(0,159,227);
	background-color:						rgb(90,90,89);
}

QPushButton:hover
{
	background-color:						rgb(0,159,227);
	color:			 						rgb(44,44,43);
}

QPushButton:disabled
{
	background-color:						rgb(50,50,49);
	color: 									rgb(74,74,73);
}


/*------------------------*/
/* Transparent PushButton */
/*------------------------*/

QPushButton#TransparentButton
{
	background-color: 						transparent;
	color: 									rgb(0,159,227);
	border: 								0px;
	border-radius:							0px;
}

QPushButton#TransparentButton:hover
{
	background-color:						rgb(87,87,86);
}

QPushButton#TransparentButton:disabled
{
	color: 									rgb(100,99,99);
	border-color: 							transparent;
}


/*------------------------*/
/* Image PushButton       */
/*------------------------*/

QPushButton#ImageButton
{
	background-color: 						transparent;
	color: 									rgb(0,159,227);
	border: 								0px;
	border-radius:							0px;
}

QPushButton#ImageButton:disabled
{
	background-color: 						transparent;
	color: 									rgb(100,99,99);
}


/*---------------------------------------------------------------------------------------------------------------------*/
/* Label																											   */
/*---------------------------------------------------------------------------------------------------------------------*/
QLabel
{
	background: transparent;
	color: rgb(218,218,218);
}


/*---------------------------------------------------------------------------------------------------------------------*/
/* Checkbox																											   */
/*---------------------------------------------------------------------------------------------------------------------*/

QCheckBox
{
	spacing: 								3px;
	background: 							none;
}

QCheckBox::indicator
{
	background-color: 						rgb(74,74,73);
	color: 									rgb(0,159,227);

	border: 								1px solid rgb(50,50,50);
	border-radius:							7px;

	width: 									16px;
	height: 								16px;
}

QCheckBox::indicator:disabled
{
	background-color:						rgb(50,50,49);
}

QCheckBox::indicator:hover
{
	border:									1px solid rgb(0,159,227);
}

QCheckBox::indicator:unchecked
{
	image: 									none;
}

QCheckBox::indicator:checked
{
	image: 									url(:/Images/Icons/CheckBoxChecker.png);
}

QCheckBox::indicator:checked:pressed
{
	image: 									url(:/Images/Icons/CheckBoxCheckerPressed.png);
}

QCheckBox::indicator:unchecked:pressed
{
	image: 									url(:/Images/Icons/CheckBoxCheckerPressed.png);
}


/*---------------------------------------------------------------------------------------------------------------------*/
/* SpinBox														                                                       */
/*---------------------------------------------------------------------------------------------------------------------*/

QLineEdit#SpinBoxEdit
{
	border-top: 							1px solid rgb(50,50,50);
	border-bottom: 							1px solid rgb(50,50,50);
